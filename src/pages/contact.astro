---
import Layout from "../components/layout/layout.astro";
import { Button } from "@/components/ui/button";
---

<Layout>
  <!-- hero -->
  <div
    class="min-h-screen w-full flex items-center justify-center bg-cover bg-center"
    style="background-image: url('/hero-contact.png');"
  >
    <div
      class="relative px-6 py-10 mx-auto text-white sm:px-16 sm:py-20 max-w-7xl text-center"
    >
      <div class="hero-content">
        <h1
          class="mb-2 text-white font-poppins font-normal"
          data-aos="fade-right"
          data-aos-duration="1000"
        >
          Get in Touch with Us
        </h1>
        <p
          class="mb-6 font-normal font-robot md:mb-10 sm:mb-8 sectionLargeText text-silver"
          data-aos="fade-up"
          data-aos-duration="1500"
        >
          Our works reflect our passion for innovation and quality.
        </p>
      </div>
    </div>
  </div>
  <!-- hero -->

  <!-- section-one -->
  <section class="section-padding">
    <div class="relative flex flex-col gap-6 md:flex-row">
      <div class="w-full md:w-1/2">
        <div class="block">
          <h3
            class="font-poppins font-semibold sectionHeadText text-night-foreground md:text-[44px]"
          >
            Weâ€™re Here to Help
          </h3>
