---
import Layout from "../components/layout/layout.astro";
import { Button } from "@/components/ui/button";
---

<Layout>
  <!-- hero -->
  <div
    class="hero h-screen relative"
    style="background-image: url('/public/hero-about.png');"
  >
    <div class="section-padding relative z-10">
      <div class="text-center max-w-5xl mx-auto">
        <h1
          class="font-poppins mb-5 heroHeadText font-normal bg-raisinblack bg-gradient-to-br from-white tracking-[-2px] bg-clip-text text-transparent"
        >
          Software Solutions that Lead the Way
        </h1>
        <p class="text-silver font-normal sectionLargeText mb-14">
          In a rapidly changing world, our software solutions keep you ahead of
          the curve.
        </p>

        <a href="" class="btn-davygray items-center sectionSemiLargeText">
          <span>How It Works</span>
          <i class="fa-solid fa-arrow-right-long ml-2"></i>
        </a>
      </div>
      <a
        href=""
        class="absolute left-5 sm:bottom-10 flex flex-col items-center sectionMediumText bg-davygray bg-gradient-to-br from-white bg-clip-text text-transparent"
      >
        <div
          class="mb-2"
          style="writing-mode: vertical-lr; text-orientation:mixed "
        >
          Scroll Down
        </div>

        <div
          class="animate-bounce duration-1000 mt-4 text-[16px] md:text-[20px]"
        >
          <i class="fa-solid fa-computer-mouse text-seasalt"></i>
        </div>
      </a>
    </div>
  </div>
  <!-- hero -->

  <!-- section one -->
  <section class="section-padding">
    <div class="grid lg:grid-cols-2">
      <div class="block lg:mb-0 mb-4">
        <p class="sectionLargeText text-davyGray font-robot">Our Vision</p>
